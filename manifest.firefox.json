{
  "manifest_version": 2,
  "name": "Monkey 15",
  "version": "2018.8.4",
  "description": "Make the web better",
  "applications": {
    "gecko": {
      "id": "monkey15@ford-rt.com",
      "strict_min_version": "60.0"
    }
  },
  "background": {
    "page": "assets/html/background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://3dnews.ru/*"
      ],
      "run_at": "document_idle",
      "js": [
        "lib/content_scripts/3dnews.js"
      ]
    },
    {
      "matches": [
        "https://www.avito.ru/*"
      ],
      "run_at": "document_idle",
      "js": [
        "lib/content_scripts/avito.js"
      ]
    },
    {
      "matches": [
        "*://discount.ulmart.ru/*"
      ],
      "run_at": "document_idle",
      "js": [
        "lib/content_scripts/ulmart.js"
      ]
    },
    {
      "matches": [
        "https://feedly.com/i/my",
        "https://feedly.com/i/category/*",
        "https://feedly.com/i/saved",
        "https://feedly.com/i/subscription/feed*",
        "https://feedly.com/i/tag/user/*"
      ],
      "run_at": "document_idle",
      "js": [
        "lib/utils.js",
        "lib/content_scripts/feedly.js"
      ],
      "css": [
        "assets/css/feedly.css",
        "assets/css/fontawesome.v5.3.1.css"
      ]
    },
    {
      "matches": [
        "https://habr.com/users/*/favorites/"
      ],
      "js": [
        "lib/content_scripts/habr.js"
      ],
      "css": [
        "assets/css/habr.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.phoronix.com/scan.php?page=article&*"
      ],
      "run_at": "document_idle",
      "js": [
        "lib/content_scripts/phoronix.js"
      ]
    },
    {
      "matches": [
        "https://www.twitch.tv/directory/all"
      ],
      "run_at": "document_idle",
      "js": [
        "lib/content_scripts/twitch.js"
      ]
    },
    {
      "matches": [
        "http://*.wikia.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "lib/content_scripts/wikia.com.js"
      ]
    }
  ],
  "icons": {
    "48": "assets/img/icon/bund48.jpg"
  },
  "permissions": [
    "notifications"
  ]
}